<% order = importance_order(@items) %>
<% order.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= Author.find(item.author_id).name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :destroy %></td>
	<td><%= link_to 'Move to top', item, method: :move_to_start %></td>
	<td><%= link_to 'Move to bottom', item, method: :move_to_end %></td>
  </tr>
<% end %>
	</table>
</div>

